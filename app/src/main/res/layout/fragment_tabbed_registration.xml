
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context="com.example.rathin.testing.tabbed_attendance$tabbed_activity"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:scrollbars="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:scrollbars="vertical">


            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/ddbtext" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:fillViewport="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="@drawable/curved_linear"
                android:gravity="center"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="15dp"
                    android:background="@android:color/background_light"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_upload"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:clickable="true"
                        android:contentDescription="click here to select a photo"
                        app:srcCompat="@drawable/ic_person_black_48dp" />

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="10dp">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tvName"
                                    android:layout_width="90dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:text="Name"
                                    android:textSize="20sp" />

                                <EditText
                                    android:id="@+id/etName"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="0.43"
                                    android:ems="8"
                                    android:hint="@string/name_hint"
                                    android:inputType="textPersonName"
                                    android:scrollbars="horizontal" />

                            </LinearLayout>
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@android:color/background_light"
                                android:forceHasOverlappingRendering="true">

                                <TextView
                                    android:id="@+id/tvEmail"
                                    android:layout_width="90dp"
                                    android:layout_height="wrap_content"
                                    android:text="Email"
                                    android:textSize="20sp" />

                                <AutoCompleteTextView
                                    android:id="@+id/etEmail"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:ems="8"
                                    android:hint="@string/email_hint"
                                    android:textColorLink="?attr/colorPrimary" />

                                <ImageView
                                    android:id="@+id/imageView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="33dp"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginRight="1dp"
                                    android:forceHasOverlappingRendering="false"
                                    android:paddingLeft="10dp"
                                    android:textAlignment="textStart"
                                    app:srcCompat="@drawable/ic_email_black_12dp" />

                            </LinearLayout>
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tvPassword"
                                    android:layout_width="90dp"
                                    android:layout_height="wrap_content"
                                    android:text="Password"
                                    android:textSize="20sp" />

                                <EditText
                                    android:id="@+id/etPassword"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:ems="8"
                                    android:hint="@string/password_hint"
                                    android:inputType="textPassword"
                                    android:textColorLink="?attr/colorPrimary" />

                                <ImageView
                                    android:id="@+id/ivPassword"
                                    android:layout_width="match_parent"
                                    android:layout_height="33dp"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginRight="1dp"
                                    android:layout_weight="1"
                                    app:srcCompat="@drawable/ic_lock_black_24dp" />

                            </LinearLayout>
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"
                                android:orientation="horizontal"
                                android:weightSum="1">

                                <TextView
                                    android:id="@+id/tvPasswordConfirm"
                                    android:layout_width="90dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="0dp"
                                    android:text="Confirm Password"
                                    android:textSize="20sp" />

                                <EditText
                                    android:id="@+id/etPasswordConfirm"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:ems="8"
                                    android:hint="@string/password_hint"
                                    android:inputType="textPassword"
                                    android:textColorLink="?attr/colorPrimary" />

                                <ImageView
                                    android:id="@+id/ivPassVisible"
                                    android:layout_width="match_parent"
                                    android:layout_height="33dp"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginRight="1dp"
                                    android:clickable="true"
                                    app:srcCompat="@drawable/ic_visibility_black_18dp" />

                            </LinearLayout>
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tvMobile"
                                    android:layout_width="90dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="5dp"
                                    android:text="Mobile No"
                                    android:textSize="20sp" />

                                <EditText
                                    android:id="@+id/etMobile"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:ems="8"
                                    android:hint="@string/mobile_hint"
                                    android:inputType="number" />

                                <ImageView
                                    android:id="@+id/imageView6"
                                    android:layout_width="wrap_content"
                                    android:layout_height="33dp"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginRight="1dp"
                                    app:srcCompat="@drawable/ic_phone_black_18dp" />

                            </LinearLayout>
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/bday"
                                    android:layout_width="90dp"
                                    android:layout_height="wrap_content"
                                    android:elevation="1dp"
                                    android:ems="8"
                                    android:text="BirthDate"
                                    android:textSize="20sp" />

                                <EditText
                                    android:id="@+id/displayDOB"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentBottom="true"
                                    android:layout_alignParentLeft="true"
                                    android:layout_alignParentStart="true"
                                    android:ems="10"
                                    android:focusable="false"
                                    android:hint="mm/dd/yyyy"
                                    android:inputType="date" />


                            </LinearLayout>
                        </TableRow>

                    </TableLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="20dp">

                        <Button
                            android:id="@+id/btRegister"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/curved_linear"
                            android:text="Register"
                            android:textColor="#ffff" />

                    </RelativeLayout>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>


</RelativeLayout>



