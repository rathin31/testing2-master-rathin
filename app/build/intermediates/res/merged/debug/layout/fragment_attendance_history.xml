<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.rathin.testing.tabbed_attendance$PlaceholderFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.stacktips.view.CustomCalendarView
            android:id="@+id/ccv_calendar_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/background_dark"
            android:clickable="false"
            android:elevation="5dp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            app:currentDayOfMonthColor="@android:color/black"
            app:dayOfMonthTextColor="@android:color/black"
            app:disabledDayBackgroundColor="@color/tw__solid_white"
            app:disabledDayTextColor="@color/tw__solid_white"></com.stacktips.view.CustomCalendarView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp">

            <LinearLayout
                android:id="@+id/wrapper_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/tw__solid_white"
                android:elevation="5dp"
                android:isScrollContainer="false"
                android:orientation="vertical"
                android:paddingLeft="5dp"
                android:paddingStart="5dp">

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</RelativeLayout>
